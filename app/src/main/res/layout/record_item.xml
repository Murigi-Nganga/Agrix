<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:id="@+id/frag_record_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frag_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/dancingscript"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/frag_record_current_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_quantity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_record_current_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <TextView
                android:id="@+id/frag_record_measuring_unit"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/frag_record_last_edited_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_edited"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_record_last_edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>